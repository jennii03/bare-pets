            "default": "Lorem Ipsum"
          },
          {
            "type": "checkbox",
            "id": "petchola_enable",
            "label": "Enable checkmark on Petchola",
            "default": false,
            "info": "Check or X this Brand"
          }, 
          {
            "type": "text",
            "id": "petchola_text",
            "label": "Petchola Text",
            "info": "Leave this blank to display icons"
          },
          {
            "type": "checkbox",
            "id": "pedigree_enable",
            "label": "Enable checkmark on Pedigree",
            "default": false,
            "info": "Check or X this Brand"
          },
          {
            "type": "text",
            "id": "pedigree_text",
            "label": "Pedigree Text",
            "info": "Leave this blank to display icons"
          },
          {
            "type": "checkbox",
            "id": "value_enable",
            "label": "Enable checkmark on Value Meal",
            "default": false,
            "info": "Check or X this Brand"
          },
          {
            "type": "text",
            "id": "value_text",
            "label": "Value Meal Text",
            "info": "Leave this blank to display icons"
          },
          {
            "type": "checkbox",
            "id": "euka_enable",
            "label": "Enable checkmark on Eukanuba",
            "default": false,
            "info": "Check or X this Brand"
          },
          {
            "type": "text",
            "id": "euka_text",
            "label": "Eukanuba Text",
            "info": "Leave this blank to display icons"
          },
          {
            "type": "checkbox",
            "id": "onijen_enable",
            "label": "Enable checkmark on Onijen",
            "default": false,
            "info": "Check or X this Brand"
          },
          {
            "type": "text",
            "id": "onijen_text",
            "label": "Onijen Text",
            "info": "Leave this blank to display icons"
          },
          {
            "type": "checkbox",
            "id": "taste_enable",
            "label": "Enable checkmark on Taste of the Wild",
            "default": false,
            "info": "Check or X this Brand"
          },
          {
            "type": "text",
            "id": "taste_text",
            "label": "Taste of the Wild Text",
            "info": "Leave this blank to display icons"
          },
          {
            "type": "checkbox",
            "id": "acana_enable",
            "label": "Enable checkmark on Acana",
            "default": false,
            "info": "Check or X this Brand"
          },
          {
            "type": "text",
            "id": "acana_text",
            "label": "Acana Text",
            "info": "Leave this blank to display icons"
          }
        ]
      }, {
        "type": "table_headings",
        "name": "comparison_table_heading",
        "limit": 9,
        "settings": [
          {
            "type": "image_picker",
            "id": "comparison_logo",
            "label": "Table Heading Logo"
          }, {
            "type": "text",
            "id": "comparison_table_class",
            "label": "Table Heading Class",
            "default": "Enter the Table Comparison Class",
            "info": "Enter the table heading class for styling"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Module",
        "name": "Module Comparison"
      }
    ]
  }
{% endschema %}

{% style %}
.module-comparison_heading,
.module-comparison_description,
.module-comparison_table .comparison_title strong,
.petchola_enable p, .pedigree_enable p,
.value_enable p, .euka_enable p,
.onijen_enable p, .taste_enable p,
.acana_enable p{
  color: {{ heading_color }};
}

.mobile__slider .root_by_hudson {
  background-color: {{ col_highlight_bg }};
  border-color: {{ col_highlight_bg }};
}

.module-comparison_table table:not([class]) th {
    padding: 0 1em;
    border: none;
}
.module-comparison_table table:not([class]) td {
    border-right: none;
    border-left: none;
}
.empty_heading img {
    visibility: hidden;
}
.heading_logo img {
    display: block;
    width: 90%;
    height: 100%;
    margin: auto;
}
.bare_enabled img, .petchola_enable img, .pedigree_enable img, .value_enable img, .euka_enable img, .onijen_enable img, .taste_enable img, .acana_enable img {
    height: 25px;
}
.bare_enabled p {
    font-size: 14px;
    line-height: 17px;
    color: {{ colhight_txt_color }};
    text-align: center;
    font-family: var(--gilroybold);
}
.petchola_enable p, .pedigree_enable p, .value_enable p, .euka_enable p, .onijen_enable p, .taste_enable p, .acana_enable p {
    font-size: 14px;
    line-height: 17px;
    text-align: center;
    font-family: var(--gilroybold);
}

  #scroll-test {
    scroll-behavior: smooth;
  }
  .module-comparison_button-link.primary-btn.h-white {
    width: 100%;
    max-width: 391px;
    display: block;
    margin: auto;
  }
  .module-comparison-wrapper {
    width: 100%;
    padding: 50px 0;
    background-color: {{ section.settings.comparison-bg-color }}
    ;
  }

  .module-comparison_heading {
    font-size: 46px;
    line-height: 50px;
    font-family: var(--gilroybold);
    margin-bottom: 10px;
    }

    .module-comparison_heading p {
    margin: 0;
    }

    .module-comparison_heading img {
        height: 36px;
    }

    .module-comparison_subheading {
        font-size: 18px;
        line-height: 23px;
        color: {{ subheading_color }};
        margin-bottom: 10px;
        font-family: var(--futurabold);
    }

    .module-comparison_description {
        font-size: 16px;
        line-height: 21px;
        font-family: var(--gilroyreg);
    }

  .module-comparison_table-wrapper {
    width: 100%;
    max-width: 995px;
    margin: 0 auto;
    padding: 50px 20px;
    font-family: Red Hat Display, sans-serif;
    color: #fff;
  }

  .module-comparison_table {
    width: 100%;
    overflow-x: hidden;
    overflow-y: hidden;
    padding: 10px 0;
    scroll-snap-align: center;
    scroll-snap-type: x mandatory;
  }

  .module-comparison_table table {
    box-shadow: none;
    border-collapse: collapse;
    width: 100%;
  }

  .module-comparison_table tbody tr td {
    border-bottom: 1px solid {{ border_color }};
  }

  .module-comparison_table th,
  .module-comparison_table td {
    padding: 10px 0;
  }

  .module-comparison_table th {
    font-weight: normal;
  }

  .module-comparison_table tbody .comparison_title {
    width: 285px;
    padding: 10px 20px 10px 0;
  }

  .module-comparison_table .comparison_title strong {
    display: block;
    font-family: var(--gilroybold);
    font-size: 14px;
    line-height: 17px;
  }

  .module-comparison_table td.bare_enabled,
  .module-comparison_table td.petchola_enable,
  .module-comparison_table td.pedigree_enable,
  .module-comparison_table td.value_enable,
  .module-comparison_table td.euka_enable,
  .module-comparison_table td.onijen_enable,
  .module-comparison_table td.taste_enable,
  .module-comparison_table td.acana_enable  {
    text-align: center;
    position: relative
  }

  .module-comparison_table .indicator {
    width: 30px;
    height: 30px;
  }

  .module-comparison_table thead th.bare_pets,
  .module-comparison_table tbody td.bare_enabled {
    background-color: {{ col_highlight_bg }};
    border-color: {{ col_highlight_bg }};
  }

  .module-comparison_table thead th.bare_pets {
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .module-comparison_table thead th.empty_heading {
    width: 160px;
    }

  .module-comparison_table th.root_by_hudson span {
    font-size: 30px;
    font-weight: bold;
    margin-right: 10px;
  }


  .module-comparison_table tbody td.bare_enabled .indicator {
    width: 40px;
    height: 40px;
  }

  .module-comparison_table .indicator.off {
    opacity: 0.5
  }


  .module-comparison_table tr:last-of-type td.bare_enabled:after {
    content: '';
    display: block;
    background-color: {{ col_highlight_bg }};
    height: 10px;
    width: 100%;
    position: absolute;
    bottom: -10px;
    right: 0;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
  }

  .module-comparison_dots {
    position: absolute;
    right: 0;
    width: 126px;
    display: none;
    justify-content: center;
    align-items: center;
  }

  .module-comparison_dots input[type=radio] {
    margin: 5px;
  }


  @media(min-width: 1600px) {
    .module-comparison_table-wrapper {
      max-width: 1200px;
    }
    td.petchola_enable {
      width: calc(100% / 6);
    }

    td.pedigree_enable {
      width: calc(100% / 6);
    }

    td.value_enable {
      width: calc(100% / 6);
    }
    td.euka_enable {
      width: calc(100% / 6);
    }
    td.onijen_enable {
      width: calc(100% / 6);
    }
    td.taste_enable {
      width: calc(100% / 6);
    }
    td.acana_enable {
      width: calc(100% / 6);
    }
  }
  .m-show {
    display: none;
  }

  @media screen and (max-width: 920px) {
    .module-comparison_table-wrapper.m-hide {
      display: none;
    }
    .m-show {
      display: block !important;
    }
  }

  @media screen and (max-width: 600px) {
    .module-comparison_button-link.primary-btn.h-white {
      max-width: 365px;
    }
    .module-comparison_heading {
      font-size: 28px;
      max-width: 90% !important;
      margin: auto;
    }
    .module-comparison_heading br {
      display: none;
    }
    .module-comparison_table tbody td.bare_enabled .indicator {
      width: 30px;
      height: 30px;
    }
    .module-comparison_table th {
      font-size: 12px
    }
    .module-comparison_table th.root_by_hudson span {
      margin-right: 5px;
    }
    .module-comparison_table thead th.root_by_hudson {
      width: 108px;
    }
    .module-comparison_table th:nth-child(1),
    .module-comparison_table td:nth-child(1) {
      position: sticky;
      left: 0;
      width: 110px;
      min-width: 110px;
      z-index: 2;
      background-color: {{ section.settings.comparison-bg-color }}
      ;
    }

    .module-comparison_table th:nth-child(2),
    .module-comparison_table td:nth-child(2) {
      position: sticky;
      left: 110px;
      width: 126px;
      min-width: 108px;
      z-index: 2;
      background-color: {{ section.settings.comparison-bg-color }}
      ;
    }

    .module-comparison_table tbody tr td {
      border-bottom: 1px solid #2a294f !important;
    }

    .module-comparison_table::-webkit-scrollbar {
      display: none;
    }

    .module-comparison_table {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    .module-comparison_table tbody td.petchola_enable,
    .module-comparison_table tbody td.pedigree_enable,
    .module-comparison_table tbody td.value_enable,
    .module-comparison_table tbody td.euka_enable,
    .module-comparison_table tbody td.onijen_enable,
    .module-comparison_table tbody td.taste_enable,
    .module-comparison_table tbody td.acana_enable {
      min-width: 135px;
      width: 104px;
    }

    .module-comparison_table tbody .comparison_title {
      padding: 10px 0;
      font-size: 11px;
    }

    .module-comparison_dots {
      display: flex;
    }
    .module-comparison_table .comparison_title strong {
      font-size: 12px;
    }
    .module-comparison_table thead th.root_by_hudson {
      font-size: 12px;
    }
    .module-comparison_table th.root_by_hudson span {
      font-size: 16px;
    }

  }
{% endstyle %}