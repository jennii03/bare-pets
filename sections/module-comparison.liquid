{% liquid
    assign subheading = section.settings.subheading
    assign heading = section.settings.comparison_heading
    assign description = section.settings.description
    assign button = section.settings.comparison_button
    assign links = section.settings.comparison_button_link
    assign heading_color = section.settings.heading_color
    assign subheading_color = section.settings.subheading_color
    assign border_color = section.settings.border_color
    assign col_highlight_bg = section.settings.col_highlight_bg
    assign colhight_txt_color = section.settings.colhight_txt_color
  %}
<section id="{{ section.id }}" class="module module-comparison-wrapper">
  <div class="module page-width">

    <div class="module-comparison_container">
        {% if subheading != blank %}
            <h3 class="module-comparison_subheading text-center remove-spacing">
              {{ subheading }}
            </h3>
        {% endif %}
      {% if heading != blank %}
        <h1 class="module-comparison_heading text-center remove-spacing">
          {{ heading }}
        </h1>
      {% endif %}
      {% if description != blank %}
        <p class="module-comparison_description text-center remove-spacing">
          {{ description }}
        </p>
      {% endif %}

      <div class="module-comparison_table-wrapper m-hide">
        <div id="scroll-test" class="module-comparison_table">
          <table>
            <thead>
              <tr>
                {% for block in section.blocks %}
                  {% if block.type == 'table_headings' %}
                    <th class="{{ block.settings.comparison_table_class }}">
                      <img src="{{ block.settings.comparison_logo | image_url }}">
                    </th>
                  {% endif %}
                {% endfor %}
              </tr>
            </thead>
            <tbody>
              {% for block in section.blocks %}
                {% if block.type == 'table' %}
                  <tr>
                    <td class="comparison_title">
                      <strong>{{ block.settings.comparision_title }}</strong>
                    </td>
                    <td class="bare_enabled">
                      {% if block.settings.bare_enable == true %}
                        <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check.png?v=1685517505">
                      {% else %}
                        <p class="bare-text remove-spacing">{{ block.settings.bare_text }}</p>
                      {% endif %}
                    </td>
                    <td class="petchola_enable">
                      {% if block.settings.petchola_text != blank %}
                        <p class="petchola-text remove-spacing">{{ block.settings.petchola_text }}</p>
                      {% elsif block.settings.petchola_enable == true %}
                        <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                      {% elsif block.settings.petchola_enable == false %}
                        <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                      {% endif %}
                    </td>
                    <td class="pedigree_enable">
                        {% if block.settings.pedigree_text != blank %}
                            <p class="pedigree-text remove-spacing">{{ block.settings.pedigree_text }}</p>
                        {% elsif block.settings.pedigree_enable == true %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                        {% elsif block.settings.pedigree_enable == false %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                        {% endif %}
                    </td>
                    <td class="value_enable">
                        {% if block.settings.value_text != blank %}
                            <p class="value-text remove-spacing">{{ block.settings.value_text }}</p>
                        {% elsif block.settings.value_enable == true %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                        {% elsif block.settings.value_enable == false %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                        {% endif %}
                    </td>
                    <td class="euka_enable">
                        {% if block.settings.euka_text != blank %}
                            <p class="euka-text remove-spacing">{{ block.settings.euka_text }}</p>
                        {% elsif block.settings.euka_enable == true %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                        {% elsif block.settings.euka_enable == false %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                        {% endif %}
                    </td>
                    <td class="onijen_enable">
                        {% if block.settings.onijen_text != blank %}
                            <p class="onijen-text remove-spacing">{{ block.settings.onijen_text }}</p>
                        {% elsif block.settings.onijen_enable == true %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                        {% elsif block.settings.onijen_enable == false %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                        {% endif %}
                    </td>
                    <td class="taste_enable">
                        {% if block.settings.taste_text != blank %}
                            <p class="taste-text remove-spacing">{{ block.settings.taste_text }}</p>
                        {% elsif block.settings.taste_enable == true %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                        {% elsif block.settings.taste_enable == false %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                        {% endif %}
                    </td>
                    <td class="acana_enable">
                        {% if block.settings.acana_text != blank %}
                            <p class="acana-text remove-spacing">{{ block.settings.acana_text }}</p>
                        {% elsif block.settings.acana_enable == true %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/check-1.png?v=1685517505">
                        {% elsif block.settings.acana_enable == false %}
                            <img src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/X.png?v=1685517505">
                        {% endif %}
                    </td>
                  </tr>
                {% endif %}
              {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="module-comparison_dots">
          <input
            type="radio"
            name="column_slide"
            value="1"
            checked>
          <input
            type="radio"
            name="column_slide"
            value="2">
          <input
            type="radio"
            name="column_slide"
            value="3">
        </div>
      </div>

      <div class="mobile-table m-show">
        {% render 'snippet-mobile-comparison', passBlock %}
      </div>


      {% if button != blank %}
        <div class="module-comparison_button text-center">
          <a href="{{ links }}" class="module-comparison_button-link btn btn--primary">{{ button }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Module Comparison",
    "class": "module-comparison",
    "settings": [
        {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Lorem ipsum"
        }, {
        "type": "html",
        "id": "comparison_heading",
        "label": "Heading",
        "default": "<p>Lorem Ipsum Header</p>"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolorr sit met."
      },{
        "type": "text",
        "id": "comparison_button",
        "label": "Button Text",
        "default": "BUNDLE AND SAVE"
      }, {
        "type": "url",
        "id": "comparison_button_link",
        "label": "Button Link"
      }, {
        "type": "color",
        "id": "comparison-bg-color",
        "label": "Background Color",
        "default": "#f9cf4f"
      }, {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color",
        "default": "#2a294f"
      }, {
        "type": "color",
        "id": "subheading_color",
        "label": "Subheading Color",
        "default": "#EB5B56"
      }, {
        "type": "color",
        "id": "border_color",
        "label": "border Color",
        "default": "#2a294f"
      }, {
        "type": "color",
        "id": "col_highlight_bg",
        "label": "Column Highlight BG",
        "default": "#2a294f"
      }, {
        "type": "color",
        "id": "colhight_txt_color",
        "label": "hiighlighted Column Text Color",
        "default": "#6DC5B1"
      }
    ],
    "max_blocks": 16,
    "blocks": [
      {
        "type": "table",
        "name": "comparison_list",
        "limit": 6,
        "settings": [
          {
            "type": "text",
            "id": "comparision_title",
            "label": "Comparison Title",
            "default": "Enter the Comparison Title",
            "info": "Enter the Comparison content"
