        },
        {
            "type": "header",
            "content": "Support Info"
        },
        {
            "type": "text",
            "id": "support_heading",
            "label": "Support Heading",
            "default": "support"
        },
        {
            "type": "checkbox",
            "id": "enable_socials",
            "label": "Enable Socials?",
            "default": true
        }
    ],
    "blocks":[
        {
            "type": "support_item",
            "name": "Support Item",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "support_img",
                    "label": "Support Image"
                },
                {
                    "type": "text",
                    "id": "support_head",
                    "label": "Support Heading",
                    "default": "LOREM IPSUM"
                },
                {
                    "type": "html",
                    "id": "support_desc",
                    "label": "Support Description",
                    "default": "<p>Lorem Ipsum</p>"
                }
            ]
        },
        {
            "type": "social_share",
            "name": "Social Share",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "social_image",
                    "label": "Soocial Image"
                },
                {
                    "type": "url",
                    "id": "social_link",
                    "label": "Social Link"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Module Contact Form",
        "category": "banner"
      }
    ]
  }
{% endschema %}