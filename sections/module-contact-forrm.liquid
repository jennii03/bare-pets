    "name": "Module Contact Form",
    "class": "module",
    "settings": [
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#2a294f"
        },
        {
            "type": "color",
            "id": "bg_color_form",
            "label": "Form Bg Color",
            "default": "#f9cf4f"
        },
        {
            "type": "color",
            "id": "txt_color_left",
            "label": "Left Text Color",
            "default": "#2a294f"
        },
        {
            "type": "color",
            "id": "txt_color_right",
            "label": "Right Text Color",
            "default": "#ffffff"
        },
        {
            "type": "header",
            "content": "Contact Info"
        },
        {
            "type": "text",
            "id": "contact_heading",
            "label": "Contact Heading",
            "default": "contact us"
        },
        {
            "type": "textarea",
            "id": "contact_description",
            "label": "Contact Description",
            "default": "lorem ipsum dolor"
        },
        {
            "type": "html",
            "id": "contact_form",
            "label": "Contact Form Code",
