{{ 'section-image-carousel.css' | asset_url | stylesheet_tag }}

<section class="section section-image-carousel">
  <div class="wrapper">
    <h3 class="section--heading">{{ section.settings.heading }}</h3>
  </div>

  <div class="image-carousel js-image-carousel">
    {% for block in section.blocks %}
      <div class="image-carousel__item">
        <img src="{{ block.settings.logo | img_url: 'master' }}" alt="">
      </div>
    {% endfor %}
  </div>
  
  <img class="bottom-decor" src="data:image/svg+xml;base64," alt="Decor">
</section>

{% schema %}
{
  "name": "Featured Image Carousel",
  "tag": "section",
  "class": "section section-wrapper-image-carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "join our community of taking a fresher approach to pet food",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [ 
    {
      "name": "Featured Image Carousel",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}