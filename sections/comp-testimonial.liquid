{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

<section class="section section--testimonials">
  <img class="decor-top" alt="" src="data:image/svg+xml;base64," />
  <div class="wrapper">
    {%- if section.settings.subheading -%}<h4 class="section--subheading">{{ section.settings.subheading }}</h4>{%- endif -%}
    <h2 class="section--heading">{{ section.settings.heading }}</h2>

    <ul class="testimonials testimonials-col js-testimonial">
      {% for block in section.blocks %}
        <li class="testimonial-item">
          <div class="testimonial">
            <p>{{ block.settings.quote }}</p>
            <div class="testimonial-author">
              <div class="testimonial-author__info">
                <h5>{{ block.settings.author }}</h5>
                <h6>{{ block.settings.title }}</h6>
              </div>

              <div class="testimonial-author__image">
                <img src="{{ block.settings.photo | img_url: 'master' }}" alt="Author Photo">
              </div>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "default": "Client Reviews",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "What Customers Are Sayingâ€¦",
      "label": "Heading"
    }
  ],

  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Name"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}
