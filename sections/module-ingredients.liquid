{%liquid
    assign background_color = section.settings.background_color
%}
  
<div id="module-ingredients__{{ section.id }}" class="section module-ingredients" style="background: {{ background_color }};">

    <img class="module-bottom-decor" src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/download.png?v=1685523234" alt="Decor" style="background-color: #f9cf4f; display: block;">
    <div class="module-ingredients__container page-width d-flex">
        {%- for block in section.blocks -%}
            {%liquid
                assign heading = block.settings.heading
                assign description = block.settings.description

            %}
            <div class="module-ingredients__item flex-basis-100">
                <h3 class="module-ingredients__heading text-light remove-spacing text-center">{{ heading }}</h3>
                <p class="module-ingredients__description text-light remove-spacing text-center">{{ description }}</p>
            </div>
        {%- endfor -%}
    </div>

    <img class="module-bottom-decor" src="https://cdn.shopify.com/s/files/1/0613/8406/5197/files/download_1.png?v=1685523235" alt="Decor" style="background-color: #fcfcff; display: block;">

</div>

<style>

    .module-ingredients__container {
        gap: 15px;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        padding-top: 30px;
        padding-bottom: 20px;
    }

    .module-ingredients__heading {
        font-family: var(--gilroybold);
        font-size: 26px;
        margin-bottom: 1rem;
    }


    .module-ingredients__item:nth-child(2) {
        margin-top: -6%;
    }

    .module-ingredients__item:nth-child(4) {
        margin-bottom: -8%;
    }

    .module-ingredients__item:nth-child(5) {
        margin-bottom: -6%;
    }

    .module-ingredients__item {
        z-index: 2;
    }
    
    @media (max-width: 768px) {
        .module-ingredients__container {
            display: flex;
            flex-wrap: wrap;
            gap: 0;
            justify-content: center;
        }

        .module-ingredients .module-ingredients__item {
            flex-basis: calc(33.33% - 20px);
            margin: 10px;
        }
    }

    @media (max-width: 600px) {
        .module-ingredients .module-ingredients__item {
            flex-basis: calc(50% - 20px);
            margin: 10px;
        }
    }
</style>


{% schema %}
  {
    "name": "Module Ingredients",
    "class": "module",
    "settings": [
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#2a294f"
        }
    ],
    "max_blocks": 5,
    "blocks": [
        {
            "name": "Text",
            "type": "text",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "first ingredient"
                },
                {
                    "type": "textarea",
                    "id": "description",
                    "label": "Description",
                    "default": "Fresh cicken is an excellent source of high-quality protein source."
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Module Ingredients",
        "category": "text"
      }
    ]
  }
{% endschema %}
