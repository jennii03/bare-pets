                  </svg>
                  <h6>{{ block.settings.title }}</h6>
                </div>
              </div>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Worth Barking About",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "badge",
      "label": "Badge"
    }
  ],

  "blocks": [
    {
      "type": "testimonial_card",
      "name": "Testimonial Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Believe it or not, this goofball is fussy as he is fluffy. Ordered his first @barekibble... it was love at first bite! üòç"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Name",
          "default": "John D."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Approved by Bronco, the Bernese Mountain Dog"
        },
        {
          "type": "image_picker",
          "id": "dog",
          "label": "Dog\'s Photo"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Testimonials Card"
    }
  ]
}
{% endschema %}
