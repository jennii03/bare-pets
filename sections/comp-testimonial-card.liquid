{{ 'section-testimonials-card.css' | asset_url | stylesheet_tag }}

<section class="section section--testimonials-card">
  <div class="wrapper">
    {%- if section.settings.subheading -%}<h4 class="section--subheading">{{ section.settings.subheading }}</h4>{%- endif -%}
    <h2 class="section--heading">{{ section.settings.heading }}</h2>

    <ul class="testimonials-card js-testimonial-card">
      {% for block in section.blocks %}
        <li class="testimonial-card-item">
          <div class="testimonial">
            <div class="testimonial-author__image">
              <img src="{{ block.settings.photo | img_url: 'master' }}" alt="Author Photo">
            </div>
            <div class="testimonial-author__info">
              <h5>{{ block.settings.author }}</h5>

              <p>{{ block.settings.quote }}</p>
              <div class="testimonial-dog">
                <div>
                  <img src="{{ block.settings.dog | img_url: 'master' }}" alt="Author Photo">
                </div>
                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" width="40.834" height="7.432" viewBox="0 0 40.834 7.432">
