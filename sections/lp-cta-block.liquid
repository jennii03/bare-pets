{{ 'section-cta-block.css' | asset_url | stylesheet_tag }}

<div class="cta-block">
  <div class="wrapper">
    <div class="cta">
      <div class="cta-headline"><h3>{{ section.settings.headline }}</h3></div>
      <div class="cta-button"><a href="{{ section.settings.cta_link }}" class="btn btn-primary">{{ section.settings.cta_label }}</a></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "LP - CTA Block",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "default": "100% honesty guaranteed!",
      "label": "Headline"
    },
    {
      "type": "text",
      "id": "cta_label",
      "default": "Sign Up Today",
      "label": "CTA Label"
    },
    {
      "type": "text",
      "id": "cta_link",
      "default": "#contact-us",
      "label": "CTA Link"
    }
  ],

  "presets": [
    {
      "name": "LP - CTA Block"
    }
  ]
}
{% endschema %}
