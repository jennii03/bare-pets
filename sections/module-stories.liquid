{% liquid
    assign heading = section.settings.heading
    assign bg_color = section.settings.bg_color
%}

<div id="module-story-{{ section.id }}" class="module-story">
    <div class="module-story__wrapper">
        <div class="module-story__container">
            <h2 class="module-story__heading text-center remove-spacing">{{ heading }}</h2>

            <div class="module-story__slider js-stories">
                {% for block in section.blocks %}
                    {% liquid
                        assign story_image = block.settings.story_image
                        assign icon_1 = block.settings.icon_1
                        assign icon_text1 = block.settings.icon_text1
                        assign icon_2 = block.settings.icon_2
                        assign icon_text2 = block.settings.icon_text2
                        assign icon_3 = block.settings.icon_3
                        assign icon_text3 = block.settings.icon_text3
                        assign description = block.settings.description
                        assign reviewer = block.settings.reviewer
                    %}

                    <div class="module-story__slide">
                        <div class="module-story__slide-item d-flex">
                            <div class="module-story__img-container">
                                <img src="{{ story_image | image_url }}">
                            </div>
                            <div class="module-story__desc-container">
                                {% if icon_1 != blank %}
                                    <div class="module-story__icon-list d-flex">
                                        {% if icon_1 != blank %}
                                            <div class="module-story__icon-item text-center">
                                                <div class="module-story__icon-container">
                                                    <img src="{{ icon_1 | image_url }}">
                                                </div>
                                                <div class="module-story__icon-text">
                                                    <p class="module-story__icon-description text-center remove-spacing">{{ icon_text1 }}</p>
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if icon_2 != blank %}
                                            <div class="module-story__icon-item text-center">
                                                <div class="module-story__icon-container">
                                                    <img src="{{ icon_2 | image_url }}">
                                                </div>
                                                <div class="module-story__icon-text">
                                                    <p class="module-story__icon-description text-center remove-spacing">{{ icon_text2 }}</p>
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if icon_3 != blank %}
                                            <div class="module-story__icon-item text-center">
                                                <div class="module-story__icon-container">
                                                    <img src="{{ icon_3 | image_url }}">
                                                </div>
                                                <div class="module-story__icon-text">
                                                    <p class="module-story__icon-description text-center remove-spacing">{{ icon_text3 }}</p>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
    
                                <p class="module-story__description remove-spacing">{{ description }}</p>
                                <p class="module-story__reviewer remove-spacing">{{ reviewer }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<style>
    .module-story__wrapper {
        background: {{ bg_color }};
        padding: 0 30px 0 30px;
    }
    .module-story__container {
        max-width: 1280px;
        margin: auto;
    }
    .module-story__img-container img {
        width: 100%;
        height: 500px;
        object-fit: cover;
    }
    .module-story__img-container, .module-story__desc-container {
        width: 50%;
    }
    .module-story__heading {
        font-size: 50px;
        line-height: 60px;
        color: #ffffff;
        font-family: var(--gilroybold);
        margin-bottom: 50px;
        text-transform: lowercase;
    }
    .module-story__icon-description {
        font-size: 18px;
        line-height: 21px;
        color: #FFFFFF;
        font-family: var(--gilroysemi);
    }
    .module-story__icon-item {
        width: 33.33%;
    }
    .module-story__desc-container {
        padding: 50px;
    }
    .module-story__icon-list {
        gap: 45px;
        margin-bottom: 30px;
    }
    .module-story__icon-container img {
        height: 40px;
        margin-bottom: 10px;
    }
    .module-story__description {
        font-size: 16px;
        line-height: 21px;
        color: #ffffffdd;
        font-family: var(--gilroyreg);
        margin-bottom: 25px;
    }
    .module-story__reviewer {
        font-size: 18px;
        line-height: 21px;
        color: #6DC5B1;
        font-family: var(--gilroybold);
    }
    .module-story__icon-container {
        display: flex;
        justify-content: center;
    }
    .module-story__slider .slick-next:before {
        visibility: visible;
        content: ">";
        font-size: 50px;
        color: #fff;
        font-family: 'Futura PT Medium';
    }
    .module-story__slider .slick-prev:before {
        visibility: visible;
        content: "<";
        font-size: 50px;
        color: #fff;
        font-family: 'Futura PT Medium';
    }
    .module-story__slider .slick-prev {
        visibility: hidden;
        position: absolute;
        bottom: 0;
        left: 54%;
        z-index: 9;
    }
    .module-story__slider .slick-next {
        visibility: hidden;
        position: absolute;
        bottom: 0;
        left: 59%;
        z-index: 9;
    }

    @media(max-width: 1024px) {
        .module-story__slide-item {
            flex-direction: column;
        }
        .module-story__img-container, .module-story__desc-container {
            width: 100%;
        }
        .module-story__slider .slick-prev {
            left: 0%;
        }
        .module-story__slider .slick-next {
            left: 7%;
        }
        .module-story__slider .slick-prev:before, .module-story__slider .slick-next:before {
            font-size: 30px;
        }
        .module-story__icon-list {
            margin-bottom: 20px;
        }
        .module-story__desc-container {
            padding: 20px 0 50px;
        }
    }
    @media(max-width: 767px) {
        .module-story__img-container img {
            height: 300px;
        }
    }
</style>

