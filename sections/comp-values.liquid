{{ 'section-values.css' | asset_url | stylesheet_tag }}

<section class="section section--core-values vertical-gradient pull-next">
  <img class="decor-top" alt="" src="data:image/svg+xml;base64," />
  <img src="{{ 'img-core-kibble.png' | asset_url }}" class="decor-kibble-top-right" alt="">

  <div class="wrapper">
    {%- if section.settings.subheading -%}<h4 class="section--subheading">{{ section.settings.subheading }}</h4>{%- endif -%}
    <h2 class="section--heading">{{ section.settings.heading }}</h2>

    <ul class="core-values">
      {% for block in section.blocks %}
        <li class="core-values-item">
          <div class="values">
            <div class="values--image">
              <img src="{{ block.settings.photo | img_url: 'master' }}" alt="Photo about {{ block.settings.title }}">
            </div>
            <div class="values--copy">
              <h5>{{ block.settings.subtitle }}</h5>
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Core Values",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "default": "Our Core Values",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Committed to dog parents & dogs all over the world",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "bg",
      "label": "Background"
    }
  ],

  "blocks": [
    {
      "type": "values",
      "name": "Values",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub Title"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Core Values"
    }
  ]
}
{% endschema %}
