{{ 'module-pages-banner.css' | asset_url | stylesheet_tag }}

{%liquid
    assign heading = section.settings.heading
%}

<div class="module-pages-banner section-padding" style="background-image: url({{ section.settings.background | img_url : 'master' }})">
    <div class="module-pages-banner__container">
        <h1 class="main-heading remove-spacing text-purple">{{ heading }}</h1>
    </div>
</div>

{% schema %}
  {
    "name": "Pages Banner",
    "class": "module",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "how can we help you today?"
        },
        {
            "type": "image_picker",
            "id": "background",
            "label": "Background"
        }
    ],
    "presets": [
      {
        "name": "Pages Banner",
        "category": "product"
      }
    ]
  }
{% endschema %}