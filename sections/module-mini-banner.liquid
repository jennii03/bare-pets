{% liquid
    assign bg_image = section.settings.bg_image
    assign h_color = section.settings.h_color
    assign heading = section.settings.heading
    assign subheading = section.settings.subheading
%}

<div id="module-mini-banner-{{ section.id }}" class="module-mini-banner">
    <div class="module-mini-banner__wrapper">
        <div class="module-mini-banner__container">
            {% if subheading != blank %}
                <h3 class="remove-spacing subheading text-mint">{{ subheading }}</h3>
            {% endif %}
            <h1 class="module-mini-banner__heading remove-spacing">{{ heading }}</h1>
        </div>
    </div>
</div>

<style>
    .module-mini-banner__wrapper {
        background-image: url('{{ bg_image | image_url }}');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        padding: 70px 30px;
        height: 40vh;
        display: flex;
        align-items: center;
    }
    .module-mini-banner__container {
        max-width: 1280px;
        margin: auto;
        width: 100%;
    }
    .module-mini-banner__heading {
        color: {{ h_color }};
        font-size: 64px;
        line-height: 70px;
        font-family: var(--gilroyblack);
    }

    @media (max-width: 767px) {
        .module-mini-banner__heading {
            font-size: 24px;
            line-height: 30px;
        }
        .module-mini-banner__wrapper {
            align-items: flex-start;
        }
        .module-mini-banner__container {
            margin: 0;
        }
    }
</style>

{% schema %}
  {
    "name": "Module Mini Banner",
    "class": "module",
    "settings": [
        {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image"
        },
        {
            "type": "color",
            "id": "h_color",
            "label": "Heading Color",
            "default": "#ffffff"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading (Optional)"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "lorem ipsum dolor sit met"
        }
    ],
    "presets": [
      {
        "name": "Module Mini Banner",
        "category": "banner"
      }
    ]
  }
{% endschema %}