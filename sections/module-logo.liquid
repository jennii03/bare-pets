{% liquid
    assign txt_color = section.settings.txt_color
    assign heading = section.settings.heading
    assign top_bg_color = section.settings.top_bg_color
    assign middle_bg_color1 = section.settings.middle_bg_color1
    assign middle_bg_color2 = section.settings.middle_bg_color2
    assign bottom_bg_color = section.settings.bottom_bg_color
    assign remove_bot_decor = section.settings.remove_bot_decor
    assign top_decor = section.settings.top_decor
%}

<div id="module-logo-{{ section.id }}" class="module-logo">
    {% if top_decor != blank %}
        <img class="module-top-decor" src="{{ top_decor | image_url }}" alt=""  style="background: {{ top_bg_color }}; width: 100%;"  >
    {% else %}
        <img class="module-top-decor" src="data:image/svg+xml;base64," alt=""  style="background: {{ top_bg_color }};"  >
    {% endif %}

    <div class="module-logo__wrapper" style="background: {{ background_color }};">
        <div class="module-logo__container">
            <h3 class="module-logo__heading remove-spacing text-center">{{ heading }}</h3>
            <div class="module-logo__logos">
                {% assign count = 0 %}
                {% for block in section.blocks %}
                    {%liquid
                        assign logo = block.settings.logo
                    %}
                    {% assign count = count | plus: 1 %}
                    <div class="module-logo__items">
                        <img src="{{ logo | image_url }}" class="module-logo__image">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% if remove_bot_decor != true %}
        <img style="background: {{ bottom_bg_color }};" class="module-bottom-decor" src="data:image/svg+xml;base64," alt="Decor"  style="background: {{ top_bg_color }};" >
    {% endif %}
</div>

<style>
    .module-logo {
        margin-top: -7%;
    }
    .module-logo__wrapper {
        background-image: linear-gradient(180deg, {{ middle_bg_color1 }}, {{ middle_bg_color2 }});
        padding: 0 30px;
        margin: -3px 0;
    }
    .module-logo__container {
        max-width: 1280px;
        margin: auto;
        padding: 40px 0 0;
    }
    .module-logo__heading {
        color: {{ txt_color }};
        font-size: 18px;
        line-height: 23px;
        font-family: var(--futurabold);
        letter-spacing: 2px;
    }
    .module-logo__logos {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }
    .module-top-decor, .module-bottom-decor {
        width: 100%;
        display: block;
    }
    .module-top-decor {
        margin-bottom: -10px;
    }
    .module-logo__items {
        text-align: -webkit-center;
    }

    {% if count == 6 %}
        .module-logo__items:nth-child(1),
        .module-logo__items:nth-child(6) {
            margin-top: -8%;
        }
        .module-logo__items:nth-child(3),
        .module-logo__items:nth-child(4) {
            margin-top: 4%;
            margin-bottom: -2%;
            z-index: 1;
        }
    {% else %}
        .module-logo__items:nth-child(1),
        .module-logo__items:nth-child(5) {
            margin-top: -8%;
        }
        .module-logo__items:nth-child(3) {
            margin-top: 8%;
        }
    {% endif %}

    {% if remove_bot_decor == true %}
        .module-logo__container {
            padding: 20px 0;
        }
    {% endif %}

    @media (max-width: 1002px) {
        .module-logo__items:nth-child(1),
        .module-logo__items:nth-child(5),
        .module-logo__items:nth-child(6),
        .module-logo__items:nth-child(3),
        .module-logo__items:nth-child(4) {
            margin-top: 0;
            margin-bottom: 0;
        }
        .module-logo__logos {
            padding: 20px 0;
        }

        .module-logo__logos .slick-track {
            display: flex!important;
            align-items: center;
        }
    }

    .module-logo__items img {
        width: 150px;
        object-fit: contain;
    }
</style>

{% schema %}
  {
    "name": "Module Logo",
    "class": "module",
    "settings": [
        {
            "type": "color",
            "id": "txt_color",
            "label": "Heading Color",
            "default": "#9F9FBF"
        },
        {
            "type": "color",
            "id": "top_bg_color",
            "label": "Top Background Color",
            "default": "#2B2A51"
        },
        
        {
            "type": "color",
            "id": "middle_bg_color1",
            "label": "Middle Background Color 1",
            "default": "#6565A0"
        },
        {
            "type": "color",
            "id": "middle_bg_color2",
            "label": "Middle Background Color 2",
            "default": "#6565A0"
        },
        {
            "type": "color",
            "id": "bottom_bg_color",
            "label": "Bottom Background Color",
            "default": "#ffffff"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Lorem ipsum"
        },
        {
            "type": "checkbox",
            "label": "Remove bottom decor",
            "id": "remove_bot_decor",
            "default": false
        },
        {
            "type": "image_picker",
            "id": "top_decor",
            "label": "Top Decor"
        }
    ],
    "max_blocks": 6,
    "blocks": [
        {
            "type": "logo",
            "name": "Logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Module Logo",
        "category": "banner"
      }
    ]
  }
{% endschema %}