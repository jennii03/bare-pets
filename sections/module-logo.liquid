{% liquid
    assign txt_color = section.settings.txt_color
    assign heading = section.settings.heading
%}

<div id="module-logo-{{ section.id }}" class="module-logo">
    <img class="module-top-decor" src="data:image/svg+xml;base64," alt="" >

    <div class="module-logo__wrapper">
        <div class="module-logo__container">
            <h3 class="module-logo__heading remove-spacing text-center">{{ heading }}</h3>
            <div class="module-logo__logos">
                {% for block in section.blocks %}
                    {%liquid
                        assign logo = block.settings.logo
                    %}
                    <div class="module-logo__items">
                        <img src="{{ logo | image_url }}" class="module-logo__image">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <img class="module-bottom-decor" src="data:image/svg+xml;base64," alt="Decor">
</div>

<style>
    .module-logo {
        margin-top: -7%;
    }
    .module-logo__wrapper {
        background: #6565A0;
        padding: 0 30px;
        margin: -3px 0;
    }
    .module-logo__container {
        max-width: 1280px;
        margin: auto;
        padding: 20px 0 0;
    }
    .module-logo__heading {
        color: {{ txt_color }};
        font-size: 18px;
        line-height: 23px;
        font-family: var(--futurabold);
        letter-spacing: 2px;
    }
    .module-logo__logos {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }
    .module-top-decor, .module-bottom-decor {
        width: 100%;
    }
    .module-top-decor {
        margin-bottom: -10px;
    }
    .module-logo__items {
        text-align: -webkit-center;
    }

    .module-logo__items:nth-child(1),
    .module-logo__items:nth-child(6) {
        margin-top: -8%;
    }
    .module-logo__items:nth-child(3),
    .module-logo__items:nth-child(4) {
        margin-top: 8%;
    }

    @media (max-width: 1002px) {
        .module-logo__items:nth-child(1),
        .module-logo__items:nth-child(6),
        .module-logo__items:nth-child(3),
        .module-logo__items:nth-child(4) {
            margin-top: 0;
        }
        .module-logo__logos {
            padding: 20px 0;
        }

        .module-logo__logos .slick-track {
            display: flex!important;
            align-items: center;
        }
    }
</style>

{% schema %}
  {
    "name": "Module Logo",
    "class": "module",
    "settings": [
        {
            "type": "color",
            "id": "txt_color",
            "label": "Heading Color",
            "default": "#9F9FBF"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Lorem ipsum"
        }
    ],
    "max_blocks": 6,
    "blocks": [
        {
            "type": "logo",
            "name": "Logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Module Logo",
        "category": "banner"
      }
    ]
  }
{% endschema %}