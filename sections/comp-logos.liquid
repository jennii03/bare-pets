{{ 'section-logos.css' | asset_url | stylesheet_tag }}

<section class="section section-logos">
  <img class="top-decor" src="data:image/svg+xml;base64," alt="" >
  <div class="wrapper">
    <h3 class="section--heading">{{ section.settings.heading }}</h3>
    {%- if section.blocks -%}
      <div class="logos-list js-logos-list">
        {%- for block in section.blocks -%}
          <div class="logos-list__item">
            {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
                {% endif %}
                    <img src="{{ block.settings.logo | img_url: 'master' }}" alt="{{ block.settings.logo.alt }}">
                {% if block.settings.link != blank %}
                </a>
            {% endif %}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>

  <img class="bottom-decor" src="data:image/svg+xml;base64," alt="Decor">
</section>

{% schema %}
{
  "name": "Logos",
  "tag": "section",
  "class": "section section-wrapper-logos",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Title of Content",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "link",
          "label": "Logo Link"
        }
      ]
    }
  ],
  "presets": [ 
    {
      "name": "Logos",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}