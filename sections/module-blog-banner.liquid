{{ 'module-blog-banner.css' | asset_url | stylesheet_tag }}

{% liquid
    assign bg_image = section.settings.bg_image
    assign heading = section.settings.heading
%}
  
  <div id="module-blog-banner-{{ section.id }}" class="module-blog-banner" style="background-image: url({{ section.settings.bg_image | img_url : 'master' }})">
    <div class="module-blog-banner__container page-width">
        <div class="module-blog-banner__heading">
            <h1 class="remove-spacing text-light">{{ heading }}</h1>
        </div>
    </div>
  </div>

  {% schema %}
    {
      "name": "Module blog banner",
      "class": "module",
      "settings": [
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "free education to set your pup up for a healthier, happier life"
            }
      ],
      "presets": [
        {
          "name": "Module blog banner",
          "category": "banner"
        }
      ]
    }
  {% endschema %}